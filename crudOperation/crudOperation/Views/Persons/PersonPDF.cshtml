@model IEnumerable<PersonResponse>
@{
    Layout = null;
}

<link href="@("http://" + Context.Request.ToString() + "/StyleSheet.css")" rel="stylesheet"/>
<h2>Persons</h2>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Date Of Birth</th>
            <th>Age</th>
            <th>Country</th>
            <th>Address</th>
            <th>Receive News Latters</th>
            <th> Options </th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonResponse person in Model)
        {
            <tr>
                <td style="width:13%">@person.PersonName</td>
                <td style="width:15%">@person.Email</td>
                <td style="width:8%">@person.Gender</td>
                <td style="width:10%">@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
                <td style="width:8%">@person.Age</td>
                <td style="width:8%">@person.Country</td>
                <td style="width:12%">@person.Address</td>
                <td style="width:8%">@person.ReceiveNewsLetters</td>
            </tr>
        }
    </tbody>
</table>